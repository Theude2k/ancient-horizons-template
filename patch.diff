+import React, { useState } from 'react';
+
+const Board: React.FC = () => {
+  const [clickedTiles, setClickedTiles] = useState<Set<string>>(new Set());
+
+  const handleTileClick = (row: number, col: number) => {
+    const tileId = `${row}-${col}`;
+    setClickedTiles(prevClicked => {
+      const newClicked = new Set(prevClicked);
+      if (newClicked.has(tileId)) {
+        newClicked.delete(tileId);
+      } else {
+        newClicked.add(tileId);
+      }
+      return newClicked;
+    });
+  };
+
+  const renderTile = (row: number, col: number) => {
+    const tileId = `${row}-${col}`;
+    const isActive = clickedTiles.has(tileId);
+    const tileStyle: React.CSSProperties = {
+      width: '40px',
+      height: '40px',
+      display: 'inline-block',
+      margin: '2px',
+      backgroundColor: isActive ? 'lightblue' : 'lightgray',
+      border: '1px solid black',
+      cursor: 'pointer'
+    };
+    return (
+      <div key={tileId}
+           style={tileStyle}
+           onClick={() => handleTileClick(row, col)}>
+      </div>
+    );
+  };
+
+  return (
+    <div>
+      {Array.from({ length: 5 }).map((_, row) => (
+        <div key={row}>
+          {Array.from({ length: 5 }).map((_, col) => renderTile(row, col))}
+        </div>
+      ))}
+    </div>
+  );
+};
+
+export default Board;
